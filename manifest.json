{
	"manifest_version": 2,
	"name":"Acunote helper",
	"version":"0.2",
	"description":"Helps to change tasks in few clicks",
	"background": {
		"persistant": false,
		"scripts": ["background.js"]
	},
	"permissions" : [
	    "tabs"
	],
	"page_action": {
		"default_title": "Manage tasks in few clicks",
        "default_icon": "img/icon48.png",
        "default_popup": "popup.html"
	},
	"icons" : {
		"16" : "img/icon16.png",
		"48" : "img/icon48.png",
		"128" : "img/icon128.png"
	},
	"content_scripts": [
		{
			"matches": ["*://*.acunote.com/*query=*"],
			"js": ["mootools.js", "content.js"]
		}
	]
}
